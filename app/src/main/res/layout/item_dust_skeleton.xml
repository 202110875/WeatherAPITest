<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_dust_skeleton_info_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/item_dust_skeleton_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@color/gray_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/item_dust_skeleton_sidoname_tv"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="3dp"
        android:background="@color/gray_color"
        app:layout_constraintTop_toTopOf="@id/item_dust_skeleton_info_cardView"
        app:layout_constraintStart_toEndOf="@id/item_dust_skeleton_info_cardView"
        app:layout_constraintBottom_toTopOf="@id/item_dust_skeleton_stationname_tv"
        />

    <View
        android:id="@+id/item_dust_skeleton_stationname_tv"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:background="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/item_dust_skeleton_sidoname_tv"
        app:layout_constraintStart_toEndOf="@id/item_dust_skeleton_info_cardView"
        />

    <View
        android:id="@+id/item_dust_skeleton_datetime_tv"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:background="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/item_dust_skeleton_stationname_tv"
        app:layout_constraintStart_toEndOf="@id/item_dust_skeleton_info_cardView"
        />

    <View
        android:id="@+id/item_dust_skeleton_pm10value_title_tv"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:background="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/item_dust_skeleton_datetime_tv"
        app:layout_constraintStart_toEndOf="@id/item_dust_skeleton_info_cardView"
        />


    <View
        android:id="@+id/item_dust_skeleton_pm25value_title_tv"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:background="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/item_dust_skeleton_pm10value_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_dust_skeleton_info_cardView"
        />

    <View
        android:id="@+id/item_dust_skeleton_so2value_title_tv"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:background="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/item_dust_skeleton_pm25value_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_dust_skeleton_info_cardView"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
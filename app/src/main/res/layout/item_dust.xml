<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_home_dust_info_cardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/item_home_dust_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/home_dust_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_home_dust_sidoname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="@id/item_home_dust_info_cardView"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_info_cardView"
        app:layout_constraintBottom_toTopOf="@id/item_home_dust_stationname_tv"
        />

    <TextView
        android:id="@+id/item_home_dust_stationname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한강대로"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_home_dust_sidoname_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_info_cardView"
        />

    <TextView
        android:id="@+id/item_home_dust_datetime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-05-06"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_home_dust_stationname_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_info_cardView"
        />

    <TextView
        android:id="@+id/item_home_dust_pm10value_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미세먼지(PM10) 농도: "
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_home_dust_datetime_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_info_cardView"
        />

    <TextView
        android:id="@+id/item_home_dust_pm10value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="68"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_home_dust_datetime_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_pm10value_title_tv"
        />

    <TextView
        android:id="@+id/item_home_dust_pm25value_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미세먼지(PM2.5) 농도: "
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_home_dust_pm10value_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_info_cardView"
        />

    <TextView
        android:id="@+id/item_home_dust_pm25value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="39"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_home_dust_pm10value_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_pm25value_title_tv"
        />

    <TextView
        android:id="@+id/item_home_dust_so2value_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아황산가스 농도: "
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_home_dust_pm25value_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_info_cardView"
        />

    <TextView
        android:id="@+id/item_home_dust_so2value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.007"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_home_dust_pm25value_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_dust_so2value_title_tv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>